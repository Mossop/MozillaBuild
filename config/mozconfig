if [ "$BUILD_APP_OPTIONS" = "debug" ]; then
  . $CONFIG/includes/debug.mozconfig
elif [ "$BUILD_APP_OPTIONS" = "gcov" ]; then
  . $CONFIG/includes/gcov.mozconfig
elif [ "$BUILD_APP_OPTIONS" = "l10n" ]; then
  . $CONFIG/includes/l10n.mozconfig
else
  ac_add_options --enable-optimize
fi

ac_add_options --disable-activex
ac_add_options --disable-activex-scripting
ac_add_options --disable-installer
ac_add_options --disable-crashreporter

