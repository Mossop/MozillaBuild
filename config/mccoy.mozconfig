if [ "$BUILD_PLATFORM" == "mac" ]; then
  #ac_add_options --with-libxul-sdk=$HOME/gecko-sdk/i386
  ac_add_app_options ppc  --with-libxul-sdk=$HOME/gecko-sdk/ppc
  ac_add_app_options i386 --with-libxul-sdk=$HOME/gecko-sdk/i386
elif [ "$BUILD_PLATFORM" == "win" ]; then
