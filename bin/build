if [ "$1" ]; then
  config $1
fi

. $BUILD_BASE/bin/applyconfig

if [ -f $BUILD_SOURCE/client.mk ]; then
  cd $BUILD_SOURCE
else
  echo "No client.mk in source directory."
  exit
fi

if [ -f $BUILD_SOURCE/../codate ]; then
  . $BUILD_SOURCE/../codate
  export MOZ_BUILD_DATE
fi

if [ ! -d $MOZ_OBJDIR ]; then
  mkdir $MOZ_OBJDIR
fi
	
if [ ! -d $BUILD_BASE/logs ]; then
  mkdir $BUILD_BASE/logs
fi

LOGNAME=$BUILD_BASE/logs/$BUILD_CONFIG.log

if [ "$BUILD_PYMAKE" ]; then
  export SHELL
  $AUTOCONF
  cd $BUILD_SOURCE/js/src; $AUTOCONF;
  cd $BUILD_SOURCE/nsprpub; $AUTOCONF;
  cd $MOZ_OBJDIR
  SRC=`basename $BUILD_SOURCE`
  ../../source/$SRC/configure
  if [ "$BUILD_WATCH" = "1" ]; then
    python -O $BUILD_SOURCE/build/pymake/make.py $MOZ_MAKE_FLAGS | tee $LOGNAME | $BUILD_BASE/bin/buildwatch/buildwatch
  else
    python -O $BUILD_SOURCE/build/pymake/make.py $MOZ_MAKE_FLAGS | tee $LOGNAME
  fi
elif [ "$BUILD_WATCH" = "1" ]; then
  make -f client.mk 2>&1 build | tee $LOGNAME | $BUILD_BASE/bin/buildwatch/buildwatch
else
  make -f client.mk 2>&1 build | tee $LOGNAME
fi
