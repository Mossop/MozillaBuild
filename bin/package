if [ "$1" ]; then
  config $1
fi

. $BUILD_BASE/bin/applyconfig

if [ -d $MOZ_OBJDIR/ppc ]; then
  MOZ_OBJDIR=$MOZ_OBJDIR/ppc
fi

#make -C $MOZ_OBJDIR/xpinstall/packager
make -C $MOZ_OBJDIR/$BUILD_APP/installer

if [ -f $MOZ_OBJDIR/codate ]; then
  . $MOZ_OBJDIR/codate
else
  BUILD_CO_DATE=`date +%Y%m%d.%H%M`
fi

if [ ! -d $BUILD_BASE/packages ]; then
  mkdir $BUILD_BASE/packages
fi

if [ ! -d $BUILD_BASE/packages/$BUILD_CONFIG ]; then
  mkdir $BUILD_BASE/packages/$BUILD_CONFIG
fi

for FILE in $MOZ_OBJDIR/dist/*.en-US.win32.zip
do
  if [ -f $FILE ]; then
    TARGET="$BUILD_CONFIG"
    cp -f $FILE $BUILD_BASE/packages/$TARGET.zip
    cp -f $FILE $BUILD_BASE/packages/$BUILD_CONFIG/$TARGET.$BUILD_CO_DATE.zip
  fi
done

for FILE in $MOZ_OBJDIR/dist/*.en-US.mac.dmg
do
  if [ -f $FILE ]; then
    TARGET="$BUILD_CONFIG"
    cp -f $FILE $BUILD_BASE/packages/$TARGET.dmg
    cp -f $FILE $BUILD_BASE/packages/$BUILD_CONFIG/$TARGET.$BUILD_CO_DATE.dmg
  fi
done
