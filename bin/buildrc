if [ -z "$ZSH_VERSION" ]; then
  BUILD_SHELL="bash"
else
  BUILD_SHELL="zsh"
fi
export BUILD_SHELL

config() {
  if [ "$1" ]; then
    echo "Setting up build environment for $1."
    export BUILD_CONFIG=$1
  else
    echo "Changing to default build environment."
    export BUILD_CONFIG=$BUILD_CONFIG_DEFAULT
  fi
}

if [ -d /usr/lib/ccache ]; then
  PATH=/usr/lib/ccache:$PATH
fi
if [ -d /opt/local/libexec/ccache ]; then
  PATH=/opt/local/libexec/ccache:$PATH
fi

if [ "$BUILD_SHELL" = "bash" ]; then
  if [ ${OSTYPE:0:5} = "linux" ]; then
    BUILD_PLATFORM=linux
  elif [ ${OSTYPE:0:6} = "darwin" ]; then
    BUILD_PLATFORM=mac
    if [ ${OSTYPE:6:1} = "1" ]; then
      BUILD_PLATFORM_VERSION=${OSTYPE:6:2}
    else
      BUILD_PLATFORM_VERSION=${OSTYPE:6:1}
    fi
  else
    BUILD_PLATFORM=win
  fi
else
  if [ $OSTYPE[0,5] = "linux" ]; then
    BUILD_PLATFORM=linux
  elif [ $OSTYPE[0,6] = "darwin" ]; then
    BUILD_PLATFORM=mac
    if [ $OSTYPE[7,7] = "1" ]; then
      BUILD_PLATFORM_VERSION=$OSTYPE[7,8]
    else
      BUILD_PLATFORM_VERSION=$OSTYPE[7,7]
    fi
  else
    BUILD_PLATFORM=win
  fi
fi
export BUILD_PLATFORM
export BUILD_PLATFORM_VERSION

export BUILD_BASE=`echo $BUILD_BASE | sed -e s/\\\\/$//g`

# Make sure the build dir exists
if [ ! -d $BUILD_BASE/build ]; then
  mkdir $BUILD_BASE/build
fi

if [ $BUILD_PLATFORM = "win" ]; then
  if [ $MOZ_TOOLS = "" ]; then
    export MOZ_TOOLS=$BUILD_BASE/tools/moztools

    if [ ! -d $BUILD_BASE/tools ]; then
      mkdir $BUILD_BASE/tools
    fi

    if [ ! -d $MOZ_TOOLS ]; then
      cd $BUILD_BASE/tools
      echo -e "\nDownloading Mozilla Tools..."
      wget -q http://ftp.mozilla.org/pub/mozilla.org/mozilla/libraries/win32/moztools-static.zip
      echo "Extracting Mozilla Tools..."
      unzip moztools-static.zip >/dev/null
      rm -f moztools-static.zip
    fi
    export GLIB_PREFIX=$MOZ_TOOLS
    export LIBIDL_PREFIX=$MOZ_TOOLS
  fi

  if [ $OSTYPE = "cygwin" ]; then
    VCREDIST=$(cygpath "$VCINSTALLDIR")/redist
  elif [ $OSTYPE = "msys" ]; then
    VCREDIST=$(echo $VCINSTALLDIR | sed -e s/\\\\/\\//g | sed -e s/c:/\\/c/gi)/redist
  fi
  
  if [ -d $BUILD_BASE/tools/redist ]; then
    BUILD_REDIST=$BUILD_BASE/tools/redist_std
  elif [ -d "$VCREDIST/x86/Microsoft.VC80.CRT" ]; then
    BUILD_REDIST=$VCREDIST/x86/Microsoft.VC80.CRT
  elif [ -d "$VCREDIST/x86/Microsoft.VC90.CRT" ]; then
    BUILD_REDIST=$VCREDIST/x86/Microsoft.VC90.CRT
  fi
  
  if [ -d $BUILD_BASE/tools/redist_debug ]; then
    BUILD_REDIST_DEBUG=$BUILD_BASE/tools/redist_debug
  elif [ -d "$VCREDIST/Debug_NonRedist/x86/Microsoft.VC80.DebugCRT" ]; then
    BUILD_REDIST_DEBUG=$VCREDIST/Debug_NonRedist/x86/Microsoft.VC80.DebugCRT
  elif [ -d "$VCREDIST/Debug_NonRedist/x86/Microsoft.VC90.DebugCRT" ]; then
    BUILD_REDIST_DEBUG=$VCREDIST/Debug_NonRedist/x86/Microsoft.VC90.DebugCRT
  fi
  
  export WIN32_REDIST_DIR="$BUILD_REDIST"
  export BUILD_PYTHON="${MOZBUILDDIR}python\\python.exe"
else
  export BUILD_PYTHON=python
fi

cd $BUILD_BASE

export XPCOM_DEBUG_BREAK=warn
export CHOWN_ROOT=$BUILD_BASE/bin/chown_root
export CHOWN_REVERT=$BUILD_BASE/bin/chown_revert
export BUILD_CONFIG=$BUILD_CONFIG_DEFAULT
export MOZCONFIG=$BUILD_BASE/bin/entrymozconfig
