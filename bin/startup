#! /bin/bash

if [ "$BUILD_BASE" ]; then
  echo "Build environment already initialised"
  cd $BUILD_BASE
  return
fi

if [ -f "/c/mozilla/bin/buildrc" ]; then
  cd /c/mozilla
elif [ -f "$HOME/mozilla/bin/buildrc" ]; then
  cd "$HOME/mozilla"
else
  echo "Could not find build environment"
  return
fi

export BUILD_BASE=`pwd`
export PATH=$BUILD_BASE/bin:$PATH

BUILD_CONFIG_DEFAULT=nightly
if [ -f config/localrc ]; then
  . config/localrc
fi

export BUILD_CONFIG_DEFAULT
export BUILD_WATCH
if [ "$HGUSER" ]; then
  export HGUSER
fi

if [ "$MOZ_CVS_USER" ]; then
  export MOZ_CVS_USER
fi

. bin/buildrc
