#! /bin/bash

cd `dirname $0`
cd ..
export BUILD_BASE=`pwd`
export PATH=$BUILD_BASE/bin:$PATH

BUILD_CONFIG_DEFAULT=minefield
if [ -f config/localrc ]; then
  . config/localrc
fi

export BUILD_CONFIG_DEFAULT
export BUILD_WATCH
if [ "$HGUSER" ]; then
  export HGUSER
fi

if [ "$MOZ_CVS_USER" ]; then
  export MOZ_CVS_USER
fi

/bin/bash --rcfile bin/buildrc
