#! /bin/bash

if [ "$BUILD_BASE" ]; then
  echo "Build environment already initialised"
  cd $BUILD_BASE/source/$BUILD_SOURCE
  return
fi

if [ -f "/c/mozilla/bin/buildrc" ]; then
  . /c/mozilla/bin/buildrc
elif [ -f "$HOME/mozilla/bin/buildrc" ]; then
  . "$HOME/mozilla/bin/buildrc"
else
  echo "Could not find build environment"
  return
fi

export PATH=$BUILD_BASE/bin:$PATH
mkdir -p "$BUILD_BASE/source/$BUILD_SOURCE"
cd $BUILD_BASE/source/$BUILD_SOURCE
