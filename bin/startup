#! /bin/bash

cd `dirname $0`
cd ..
export HOME=`pwd`
export PATH=$HOME/bin:$PATH

export BUILD_CONFIG_DEFAULT=minefield
export MOZ_CVS_USER=dtownsend%oxymoronical.com
export BUILD_USEGIT=1

if [ "$MOZ_CVS_USER" ]; then
  eval `ssh-agent -s`
  ssh-add
fi

/bin/bash --rcfile $HOME/bin/buildrc

if [ "$SSH_AGENT_PID" ]; then
  ssh-agent -k
fi
