#! /bin/bash

cd `dirname $0`
cd ..
export HOME=`pwd`
export PATH=$HOME/bin:$PATH

BUILD_CONFIG_DEFAULT=minefield
if [ -f config/localrc ]; then
  . config/localrc
fi

export BUILD_CONFIG_DEFAULT
export BUILD_LVC
export BUILD_WATCH

if [ "$MOZ_CVS_USER" ]; then
  export MOZ_CVS_USER
  eval `ssh-agent -s`
  ssh-add
fi

/bin/bash --rcfile $HOME/bin/buildrc

if [ "$SSH_AGENT_PID" ]; then
  ssh-agent -k
fi
