if [ "$OSTYPE" == "cygwin" ]; then
  VCREDIST=$(cygpath "$VCINSTALLDIR")/redist
elif [ "$OSTYPE" == "msys" ]; then
  VCREDIST=$(echo $VCINSTALLDIR | sed -e s/\\\\/\\//g | sed -e s/c:/\\/c/gi)/redist
fi

if [ -d $BUILD_BASE/tools/redist ]; then
  export BUILD_REDIST=$BUILD_BASE/tools/redist_std
elif [ -d "$VCREDIST/x86/Microsoft.VC80.CRT" ]; then
  export BUILD_REDIST=$VCREDIST/x86/Microsoft.VC80.CRT
fi

if [ -d $BUILD_BASE/tools/redist_debug ]; then
  export BUILD_REDIST_DEBUG=$BUILD_BASE/tools/redist_debug
elif [ -d "$VCREDIST/Debug_NonRedist/x86/Microsoft.VC80.DebugCRT" ]; then
  export BUILD_REDIST_DEBUG=$VCREDIST/Debug_NonRedist/x86/Microsoft.VC80.DebugCRT
fi

WIN32_REDIST_DIR="\"$BUILD_REDIST\""

if [ -f $BUILD_BASE/config/config ]; then
  . $BUILD_BASE/config/config
fi

if [ -f $BUILD_BASE/config/$BUILD_CONFIG.config ]; then
  . $BUILD_BASE/config/$BUILD_CONFIG.config
fi

if [ -f $BUILD_BASE/config/aliases ]; then
  exec 3<&0
  exec 0<"$BUILD_BASE/config/aliases"
  while read ALIAS APP
  do
    if [ "$BUILD_APP" == "$ALIAS" ]; then
      BUILD_APP=$APP
    fi
  done
  exec 0<&3
  exec 3<&-
fi

if [ ! "$MOZ_OBJDIR" ]; then
  MOZ_OBJDIR=$BUILD_BASE/build/$BUILD_CONFIG
fi

if [ ! "$BUILD_CLEAN" ]; then
  if [ "$MOZ_CO_TAG" ]; then
    BUILD_CLEAN=$BUILD_BASE/clean/$MOZ_CO_TAG
  else
    BUILD_CLEAN=$BUILD_BASE/clean/HEAD
  fi
fi

if [ ! "$BUILD_SOURCE" ]; then
  if [ "$MOZ_CO_TAG" ]; then
    BUILD_SOURCE=$BUILD_BASE/source/$MOZ_CO_TAG
  else
    BUILD_SOURCE=$BUILD_BASE/source/HEAD
  fi
fi

export WIN32_REDIST_DIR
export MOZ_OBJDIR
export BUILD_CLEAN
export BUILD_SOURCE
export BUILD_WATCH
export BUILD_APP
export BUILD_CONFIG
