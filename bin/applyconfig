include() {
  log include "$1"
  if [ -f $1 ]; then
    . $1
  fi
}

COMPILE_TARGET=$BUILD_PLATFORM

BUILD_APP_ALIAS=`echo $BUILD_CONFIG | sed -e s/-.*//`
if echo $BUILD_CONFIG | grep -q -- -; then BUILD_APP_OPTIONS=${BUILD_CONFIG#*-*}; fi

include $BUILD_BASE/config/config
include $BUILD_BASE/config/$BUILD_CONFIG.config

if [ -f $BUILD_BASE/config/aliases ]; then
  exec 3<&0
  exec 0<"$BUILD_BASE/config/aliases"
  while read ALIAS APP
  do
    if [ $BUILD_APP_ALIAS = "$ALIAS" ]; then
      BUILD_APP=$APP
    fi
  done
  exec 0<&3
  exec 3<&-
fi

if [ ! "$BUILD_APP" ]; then
  BUILD_APP=$BUILD_APP_ALIAS
fi

include $BUILD_BASE/config/apps/$BUILD_APP.config
include $BUILD_BASE/config/configs/$BUILD_APP_ALIAS.config
include $BUILD_BASE/config/platforms/$BUILD_PLATFORM.config
include $BUILD_BASE/config/targets/$COMPILE_TARGET.config

if [ ! "$BUILD_TREE" ]; then
  if [ -f $BUILD_BASE/config/treemap ]; then
    exec 3<&0
    exec 0<"$BUILD_BASE/config/treemap"
    while read ALIAS TREE
    do
      if [ $BUILD_APP_ALIAS = "$ALIAS" ]; then
        BUILD_TREE=$TREE
      fi
    done
    exec 0<&3
    exec 3<&-
  fi
fi

# Default to trunk setup
if [ ! "$BUILD_TREE" ]; then
  if [ -d $BUILD_BASE/source/$BUILD_APP_ALIAS ]; then
    BUILD_TREE=$BUILD_APP_ALIAS
  else
    BUILD_TREE=trunk
  fi
fi
 
include $BUILD_BASE/config/trees/$BUILD_TREE.config
include $BUILD_BASE/config/trees/$BUILD_TREE.local.config

if [ ! "$BUILD_WATCH" ] && [ -f $BUILD_BASE/bin/buildwatch/buildwatch.py ]; then
  BUILD_WATCH=1
else
  unset BUILD_WATCH
fi

if [ ! "$BUILD_SOURCE" ]; then
  BUILD_SOURCE=$BUILD_BASE/source/$BUILD_TREE
  BUILD_SOURCE_REL=../../source/$BUILD_TREE
  if [ ! -f $BUILD_SOURCE/client.mk -a -f $BUILD_SOURCE/mozilla/client.mk ]; then
    BUILD_SOURCE=$BUILD_SOURCE/mozilla
	BUILD_SOURCE_REL=$BUILD_SOURCE_REL/mozilla
  fi
else
  BUILD_SOURCE_REL=$BUILD_SOURCE
fi

if [ ! "$MOZ_OBJDIR" ]; then
  MOZ_OBJDIR=$BUILD_BASE/build/$BUILD_CONFIG
else
  BUILD_SOURCE_REL=$BUILD_SOURCE
fi

if [ "$BUILD_APP_OPTIONS" == "universal" ]; then
  BUILD_SOURCE_REL=$BUILD_SOURCE
fi

export MOZ_OBJDIR
export MOZ_MAKE_FLAGS
export MOZ_PSEUDO_DERECURSE
export BUILD_TREE
export BUILD_SOURCE
export BUILD_SOURCE_REL
export BUILD_WATCH
export BUILD_APP
export BUILD_APP_ALIAS
export BUILD_APP_OPTIONS
export BUILD_CONFIG
export COMPILE_TARGET
